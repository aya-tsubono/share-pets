<%= render "shared/header" %>

<div class='main'>
 <%# メイン画像 %>
  <%= image_tag 'pet-image.jpeg', class: "main-img" %>
    <div class='main-name'>
      <span>share pets</span>
    </div>
 <%# //メイン画像 %>

 <%# 投稿一覧 %>
  <div class='item-contents'>
    <h2 class='title'>new post</h2>
    <ul class='pet-lists'>
    
      <% if @pets.length > 0 %>
        <%= render "list", pet: @pets %>
      <% end %>
    
      <% if @pets.length == 0 %>
        <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "chopper.png", class: "pet-img" %>
        <div class='pet-info'>
          <h3 class='pet-title'>
            投稿してね!
          </h3>
          <div class='pet-name'>
            <span>チョッパー ちゃん<br>雑種 / オス / ３歳〜６歳</span>
          </div>
        </div>
        <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%# //投稿一覧 %>
  
</div>