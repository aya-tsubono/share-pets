<%= render "shared/header" %>

<h3>詳細検索ページ</h3>
<h3><%= link_to 'トップページへ戻る', root_path%></h3>
<div class='pet-contents' id="detailed-search-result-wrapper">
  <%= search_form_for @q, url: search_pets_path, html: {id: "detailed-search-form"} do |f| %>
    <div class="search-field">
        <%= f.label :title_cont, 'タイトル' %>
        <br>
        <%= f.text_field :title_cont, placeholder: 'タイトル' %>
      </div>
    <%= f.submit '検索' %>
  <% end %>
  <ul class='pet-lists' id="detailed-search-result">
    <% @pets.each do |pet| %>
      <li class='list'>
        <div class="posted-content">
          <%= image_tag pet.image, class: "pet-img" %><br>
          <%= pet.animal_name%> ちゃん( <%= pet.age.name %> )<br>
          <%= pet.breed %> / <%= pet.sex.name %>
          <%= link_to '詳細', pet_path(pet.id)%>
        </div>
      </li>
    <% end %>
  </ul>
</div>